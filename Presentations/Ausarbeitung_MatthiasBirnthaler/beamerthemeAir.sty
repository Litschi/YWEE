\usetheme{Rochester}

\RequirePackage{pgf}

\pgfdeclareimage[width=1.0\paperwidth]{wee-header}{wee-header}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamercovered{transparent}

\beamer@headheight=0.13\paperwidth

\definecolor{airorange}{rgb}{.953 ,.502 ,.04}
% \definecolor{airorange}{named}{white}
\definecolor{airdarkblue}{HTML}{064F6F}
\definecolor{airlightblue}{HTML}{0099d5}
\definecolor{airgray}{HTML}{686868}
\definecolor{airlightgray}{HTML}{eeeeee}
\definecolor{airblue}{rgb}{.13 ,.43 ,.68}
\setbeamercolor*{Title bar}{fg=airdarkblue}
\setbeamercolor*{Location bar}{fg=airorange,bg=airlightgray}
% \setbeamercolor*{frametitle}{fg=airorange,bg=airorange}
\setbeamercolor*{frametitle}{fg=white,bg=white}
\setbeamercolor*{block title}{bg=airlightblue,fg=white}
\setbeamercolor*{block body}{bg=airlightgray,fg=airgray}
\setbeamercolor*{normal text}{bg=white,fg=airgray}
% \setbeamercolor*{section in head/foot}{bg=airblue,fg=airorange}
% \setbeamercolor*{subsection in head/foot}{bg=airblue,fg=airorange}

\setbeamercolor*{section in head/foot}{bg=airblue,fg=white}
\setbeamercolor*{subsection in head/foot}{bg=airblue,fg=white}


\usecolortheme[named=airorange]{structure}

\setbeamerfont{section in head/foot}{size=\small,series=\normalfont}
\setbeamerfont{frametitle}{size=\Large}

%\setbeamertemplate{headline}
\setbeamertemplate{frametitle}
{
  \vskip-0.25\beamer@headheight
  \vskip-\baselineskip
  \vskip-0.4cm
  \hskip0.9cm\usebeamerfont*{frametitle}\insertframetitle
  \vskip-0.10em
  \hskip0.8cm\usebeamerfont*{framesubtitle}\insertframesubtitle
}

\setbeamertemplate{headline}
{
  \pgfuseimage{wee-header}
  \vskip -1.95cm
  \linethickness{0.0pt}

  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.37\beamer@headheight]{Title bar}
    \usebeamerfont{section in head/foot}%
    \insertsectionnavigationhorizontal{0pt}{\hskip 1.60cm}{}%
  \end{beamercolorbox}}

  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.1\beamer@headheight]{Title bar}
    \usebeamerfont{subsection in head/foot}%
    \insertsubsectionnavigationhorizontal{0pt}{\hskip 1.60cm}{}%
  \end{beamercolorbox}}

  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.9\beamer@headheight]{Title bar}
  \end{beamercolorbox}}
}

\setbeamertemplate{footline}
{
  \linethickness{0.25pt}
  \framelatex{
  \begin{beamercolorbox}[leftskip=.3cm,wd=\paperwidth,ht=0.37\beamer@headheight,sep=0.1cm]{Location bar}
    \usebeamerfont{section in head/foot}%
%     \insertshortauthor~|~\insertshorttitle
    \autor~|~\insertshorttitle
    \hfill
    \insertframenumber/\inserttotalframenumber
  \end{beamercolorbox}}
}

